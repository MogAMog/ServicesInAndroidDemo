<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmadnaser.servicesdemoinandroid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NormalServiceActivity"
            android:label="@string/title_activity_normal_service" >
        </activity>
        <activity
            android:name=".IntentServiceActivity"
            android:label="@string/title_activity_intent_service" >
        </activity>
        <activity
            android:name=".BoundServiceActivity"
            android:label="@string/title_activity_bound_service" >
        </activity>


        <service
            android:name=".services.NormalService">
        </service>


        <service
            android:name=".services.LongRunning">
        </service>


        <service android:name=".services.BoundService" ></service>

    </application>

</manifest>

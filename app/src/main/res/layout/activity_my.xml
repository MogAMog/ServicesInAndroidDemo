<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Normal Service"
        android:id="@+id/btnNormal"
        android:layout_alignParentStart="true"
        android:onClick="NormalService"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Intent Service"
        android:id="@+id/btnIntent"
        android:layout_below="@+id/btnNormal"
        android:layout_alignParentStart="true"
        android:onClick="IntentService"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bound Service"
        android:id="@+id/btnBound"
        android:layout_below="@+id/btnIntent"
        android:layout_alignParentStart="true"
        android:onClick="BoundService"
        />

</RelativeLayout>

 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ahmadnaser.servicesdemoinandroid.NormalServiceActivity" >

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="64dp"
            android:text="Start Service"
            android:onClick="btnClicked" />

        <Button
            android:id="@+id/btnStopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnStartService"
            android:layout_alignBottom="@+id/btnStartService"
            android:layout_marginLeft="44dp"
            android:layout_toRightOf="@+id/btnStartService"
            android:text="Stop Service"
            android:onClick="btnClicked" />

    </RelativeLayout>